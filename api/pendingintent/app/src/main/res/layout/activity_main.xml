<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="tw.test.w.f.pendingintenttest.MainActivity">

    <CheckBox
        android:id="@+id/cb_which"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="update notification 1"/>

    <TextView
        android:id="@+id/tv_0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="just 0"/>

    <TextView
        android:id="@+id/tv_oneshot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="OneShot"/>

    <TextView
        android:id="@+id/tv_update_current"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="UpdateCurrent"/>

    <TextView
        android:id="@+id/tv_cancel_current"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="CancelCurrent"/>

    <TextView
        android:id="@+id/tv_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="Send"/>


</LinearLayout>
